<div class="container vh-100">
    <div class="row h-100">
        <div class="col-12 my-auto">
            <div class="w-80 mx-auto">
                    <% @cards.each do |card| %>
                        <div class="card-trip business-card-frame" style="margin-bottom: 50px; padding: 5px;">
                            <div class="card-trip-infos col-auto mb-3">
                                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                                <div>
                                    <%= link_to business_card_path(card) do  %>  
                                        <h3><%= card.name %></h3>
                                    <% end %>
                                    <p><strong><%= "Name: #{card.firstname} #{card.lastname}" %></strong></p>
                                    <p><%= "phone: #{card.phone}" %></p>
                                    <p><%= "email: #{card.email}" %></p>
                                </div>
                            </div>
                        </div>
                    <% end %>
            </div>
        </div>
    </div>
</div>
<%= render '/shared/footer' %>



