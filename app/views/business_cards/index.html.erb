<div class="container h-100">
  <div class="header-collected text-center distance-margin-top-bottom">
    <i class="fas fa-user-tie header-logo"></i>
    <p>Business Cards</p>
  </div>
    
    <div class="row">
        <div class="col-12 my-auto">
            <div class="w-80 mx-auto">
                    
                    <div id="carouselExampleControls" class="carousel slide" data-interval="false">
                        <div class="carousel-inner">
                            <% @cards.each do |card| %>
                                <div class="carousel-item <%=  "active" if @cards.first == card  %> ">
                                    <div class="business-card-frame">
                                            <div class="bc-card-info">
                                                <div class="bc-card-logo">
                                                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                                                 <%= link_to business_card_path(card) do  %>
                                                    <%= card.name %>
                                                <% end %>
                                                </div>
                                                <div class="bc-head">
                                                    <div class="box">
                                                        <div class="box-tag">
                                                            <span class="bc-card-tag">Firstname</span>
                                                            <br>
                                                            <span class="bc-card-data"><%= card.firstname %></span>
                                                        </div>
                                                        <div class="box-tag">
                                                            <span class="bc-card-tag">Lastname</span>
                                                            <br>
                                                            <span class="bc-card-data"><%= card.lastname %></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="bc-body">
                                                    <div class="box">
                                                        <div class="box-tag">
                                                            <span class="bc-card-tag">Telephone</span>
                                                            <br>
                                                            <span class="bc-card-data"><%= card.phone %></span>
                                                        </div>
                                                        <div class="box-tag">
                                                            <span class="bc-card-tag">Address</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="bc-footer">
                                                    <div class="box">
                                                        <div class="box-tag">
                                                            <span class="bc-card-tag">E-Mail</span>
                                                            <br>
                                                            <span class="bc-card-data"><%= card.email %></span>
                                                        </div> 
                                                    </div>
                                                </div>
                                            </div> 
                                        
                                    </div>
                                    
                                </div>
                            <% end %>
                        </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                    </div> 
                    <div class="row text-center distance-margin-top-bottom">
                        <div class="col-12">
                            <a class="btn btn-flat bg-primary" href="#">Add new</a>
                        </div>
                     </div>
            </div>
        </div>
    </div>
</div>
<%= render '/shared/footer' %>

