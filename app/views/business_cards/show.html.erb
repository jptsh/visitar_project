    <div class="row">
        <div class="col-12 my-auto">
          <div class="w-100 mx-auto">
            <section class="custom">
              <div class="container">
                <div class="row">
                  <div class="flipper col-sm-3 col-sm-offset-1">
                      <div class="card card-custom" style="margin-top: 15px;">
                        <div class="front">
                            <%= render 'bc_template_front', card: @card %>
                        </div>
                        <div class="back">
                            <%= render 'bc_template_back' %>
                        <div class="goback">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            <div class="text-center qr-field-scan">
              <div id="btn-action" class="d-flex justify-content-center p-3 align-items-center"><i class="fas fa-share share-icon"></i><p class="qr-btn">Share <%= @card.name %></p></div>
            </div>
            <div class="text-center show-buttons">
              <div class="col-6 btn-edit">
                    <p style="margin-bottom: 0px;"><%= link_to "", edit_business_card_path(@card), class: "fas fa-user-edit" %> </p>
              </div>
              <div class="col-6 btn-delete">
                    <p style="margin-bottom: 0px;"><%= link_to "", business_card_path(@card), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "fas fa-user-times" %></p>
              </div>
            </div>
          </div>
        </div>

    </div>

  </div>
