<%= link_to business_cards_path, class: 'btn-back'  do %>
    <i class="fas fa-angle-left"></i>
<% end %>

<div class="container h-100">
  <div class="header-collected text-center">
      <div id="btn-action" class="btn btn-ghost">
          Show Card
      </div>
  </div>
  <form class="form-inline">
  <i class="fas fa-search" aria-hidden="true"></i>
  <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
    aria-label="Search">
</form>
    <h3 class="text-center distance-margin-top-bottom"><%= @card.name %></h3>
    <div class="row">
        <div class="col-12 my-auto">
          <div class="w-100 mx-auto">

            <section class="custom">
              <div class="container">
                <div class="row">
                  <div class="flipper col-sm-3 col-sm-offset-1">
                      <div class="card">
                        <div class="front">
                            <%= render 'bc_template_front', card: @card %>
                        </div>
                        <div class="back">
                            <%= render 'bc_template_back' %>
                        <div class="goback">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>

          </div>
        </div>
    </div>
    
</div>
  <div class="row text-center w-100 distance-margin-top-bottom">
      <div class="col-6">
            <p><%= link_to "edit", edit_business_card_path(@card), class: "btn btn-ghost"  %> </p>
      </div>
      <div class="col-6">
            <p><%= link_to "Delete", business_card_path(@card), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn bg-primary" %></p>a
      </div>
  </div>
</div>
  <%= render '/shared/footer' %>

